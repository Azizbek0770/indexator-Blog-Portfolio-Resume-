{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "22"
  },
  "steps": {
    "install": {
      "commands": [
        { "cmd": "npm install --omit=dev", "customName": "Install root dependencies carefully" }
      ]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": []
    }
  },
  "deploy": {
    "startCommand": "node server.js",
    "inputs": [
      {
        "step": "install",
        "include": ["."]
      }
    ]
  }
}
